<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="35dp">

    <FrameLayout
        android:id="@+id/bmi_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>

    <EditText
        android:id="@+id/bmi_height"
        android:drawableLeft="@drawable/ic_height"
        android:inputType="number"
        android:layout_marginTop="15dp"
        android:hint="@string/height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/bmi_weight"
        android:drawableLeft="@drawable/ic_weight"
        android:inputType="number"
        android:layout_marginTop="15dp"
        android:hint="@string/weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/bmi_calculate_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/calculate" />

    <TextView
        android:id="@+id/bmi_yourbmi_txtview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/bmi_bmi_value_txtview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_gravity="center"
        android:textSize="30sp" />

</LinearLayout>